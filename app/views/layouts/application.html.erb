<!DOCTYPE html>
<html>
<head>
  <title>Tumblr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'href="http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico'%>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  
  <div id="sidebar">
      <%= link_to "Tumblr", root_path, Class: 'btn btn-primary' %>
      <%= link_to "Posts", root_path,Class: 'btn btn-primary' %>
      <%= link_to "About", posts_path,Class: 'btn btn-primary' %>
      <%= link_to "Sign In", posts_path,Class: 'btn btn-primary' %>
  </div>
  <br />
  <div id="main-content">
    <div id="header">
      <div class="buttons">
          <%= link_to 'Make Posts', new_post_path, class:'btn btn-primary' %>
          <%= link_to 'Log Out', posts_path, class: 'btn btn-primary' %>
      </div>
      <p>Post Feed</p>
  </div>
  
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
  <% end %>
  
  <%= yield %>
  
</div>
</div>





</body>
</html>
